<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.android.risk">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Risk"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity
            android:name="com.android.risk.view.MainActivity"
            android:label=""
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.android.risk.view.GameActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_game"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name="com.android.risk.view.ActionbarGame"
            android:label="@string/title_activity_actionbar_game"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.android.risk.view.Actionbar1" />
        <activity android:name="com.android.risk.view.Actionbar2" />
        <activity android:name="com.android.risk.view.Actionbar3" />
        <activity android:name="com.android.risk.view.Actionbar4" />
        <activity android:name="com.android.risk.view.Actionbar5" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>